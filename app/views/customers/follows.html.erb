<h2>Follows</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to customer_path(customer) do %>
              <%= image_tag customer.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td><%= customer.name %>
         <% if current_customer.following?(customer) %>
          <%= link_to "フォロー解除", customer_relationships_path(customer.id), method: :delete, class: "btn btn-danger" %>
         <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table> 